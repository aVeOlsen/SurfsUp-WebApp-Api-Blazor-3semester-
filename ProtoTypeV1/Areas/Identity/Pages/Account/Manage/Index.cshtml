                    <a asp-controller="Spots" asp-action="Delete" asp-route-id="@item.SpotID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<br />

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
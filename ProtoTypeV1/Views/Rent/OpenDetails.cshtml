@model ProtoTypeV1.Models.Rental

@{
    Layout = "_Layout";
    ViewData["Title"] = "OpenDetails";
}

<h4>Detaljer</h4>
<div class="container">
    <div class="col-12">
        <form asp-action="RentIt">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProductID" />
            <h4>Udlejning</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2 form-group">
                    <label asp-for="Product" class="control-label"></label>
                </dt>
                <dd class="col-sm-10 form-group">
                    @Html.DisplayFor(model => model.Product[0].Brand)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ByDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ByDate)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ToDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ToDate)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Description)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Product[0].ProductImage)
                </dt>
                <dd class="col-sm-10">
                    <img src="@Model.Product[0].ImageDataUrl" />
                </dd>
            </dl>
            <div class="form-group">
                <div class="form-group">
                    <input id="button" type="submit" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>
<div>
    <div>
        <a href="../../Rent">Back to List</a>
    </div>
</div>

@section scripts{ 
<script src="~/js/site.js"></script>
}
@using Microsoft.AspNetCore.Identity
@using ProtoTypeV1.Models

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager


@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item pt-2 pr-2 mb-2">
        <a id="manage" class=" nav-link Font-Fam-Nav-Calibri TextColor-White"  asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Profile</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="pt-1 nav-link Font-Fam-Nav-Calibri bg-transparent border-0">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item pt-2 pr-2 mb-2">
        <a class="pt-1 nav-link Font-Fam-Nav-Calibri" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}


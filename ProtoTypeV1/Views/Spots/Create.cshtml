@model ProtoTypeV1.Models.Spot

@{
    Layout = "_Layout";
    ViewData["Title"] = "Opret spot";
}

<h4>@ViewData["Title"]</h4>

<hr />
<div class="container">

    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="City" class="control-label"></label>
                    <input asp-for="City" class="form-control" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address" class="control-label"></label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SpotName" class="control-label"></label>
                    <input asp-for="SpotName" class="form-control" />
                    <span asp-validation-for="SpotName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SpotDescription" class="control-label"></label>
                    <input asp-for="SpotDescription" class="form-control" />
                    <span asp-validation-for="SpotDescription" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SpotImage" class="control-label"></label>
                    <input type="file" multiple="multiple" asp-for="SpotImage" class="form-control" />
                    <span asp-validation-for="SpotImage" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

<div>
    <a href="/Identity/Account/Manage">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

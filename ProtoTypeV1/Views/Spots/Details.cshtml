@model ProtoTypeV1.Models.Spot

@{
    Layout = "_Layout";
    ViewData["Title"] = "Details";
}
<div class="container">
    <div class="row mt-5">
        <div class="col-ms-12 col-md-6 col-lg-6">
            <img class="img-fluid" src="@Model.ImageDataUrl" alt="Alternate Text" />
        </div>
        <div class="col-ms-12 col-md-6 col-lg-6">
            <ul>
                <li class="pb-3"><strong>@Html.DisplayNameFor(model => model.City): </strong>@Html.DisplayFor(model => model.City)</li>
                <li class="pb-3"><strong>@Html.DisplayNameFor(model => model.SpotName): </strong>@Html.DisplayFor(model => model.SpotName)</li>
                <li class="pb-3" id="LocationName"><strong>@Html.DisplayNameFor(model => model.Address): </strong>@Html.DisplayFor(model => model.Address)</li>
                <li id="lat" class="pb-3"><strong>Latitude: </strong></li>
                <li id="lng" class="pb-3"><strong>Longitude: </strong></li>
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-12 mt-3 mb-3">
            <label><strong>Description</strong></label>
            <p>@Html.DisplayFor(model => model.SpotDescription)</p>
        </div>
    </div>
</div>
<div class="container-fluid mb-5">
    <div class="row pt-5">
        <div class="col-sm-12 col-md-12 col-lg-12 margin-null padding-null">
            <h2 class="my-5 h2 Font-Fam-Franklin text-center pt-5">Vindkort</h2>
            <iframe id="spotMap" class="embed-responsive" src="https://embed.windy.com/embed2.html?lat=55.395&lon=10.390&detailLat=55.395&detailLon=10.390&width=650&height=450&zoom=5&level=surface&overlay=wind&product=ecmwf&menu=&message=&marker=true&calendar=now&pressure=&type=map&location=coordinates&detail=&metricWind=m%2Fs&metricTemp=%C2%B0C&radarRange=-1"
                    frameborder="0"
                    height="750"></iframe>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-sm-5 col-md-5 col-lg-5"></div>
        <div class="col-ms-2 col-md-2 col-lg-2">
            <button onclick="" id="ChangeMapBtn" class="flat-butt flat-underline-but">Vindkort</button>
        </div>
        <div class="col-sm-5 col-md-5 col-lg-5"></div>
    </div>
    <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-12">
            <div class="media">
                <div class="media-body">
                    <a class="pull-left" href="#">
                        <h4 class="media-heading pb-2">John Doe</h4>
                    </a>
                    <div class="pt-2">
                        <span class="material-icons">star_rate</span>
                        <span class="material-icons pl-1">star_rate</span>
                        <span class="material-icons pl-1">star_rate</span>
                        <span class="material-icons pl-1">star_half</span>
                        <span class="material-icons pl-1">star_border</span>
                    </div>
                    <hr>
                    <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Lorem ipsum dolor sit amet, consectetur adipiscing elit. Lorem ipsum dolor sit amet, consectetur adipiscing elit. Lorem ipsum dolor sit amet, consectetur adipiscing elit. Lorem ipsum dolor sit amet, consectetur adipiscing elit. Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>

                    <hr>
                </div>
            </div>

        </div>
        <div class="col-sm-12 col-md-12 col-lg-12">
            <form>
                <h3 class="pull-left pb-2 pt-2">New Comment</h3>

                <fieldset>
                    <div class="row">
                        <div>
                        </div>
                        <div class="form-group col-sm-12 col-md-12 col-lg-12">
                            <textarea class="form-control" id="message" placeholder="Your message" required=""></textarea>
                        </div>
                    </div>
                </fieldset>
                <div class="form-check form-check-inline">
                    <label class="form-check-label pr-3">Rate:</label>
                    <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="option1">
                    <label class="form-check-label" for="inlineRadio1">1</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="option2">
                    <label class="form-check-label" for="inlineRadio2">2</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio3" value="option3">
                    <label class="form-check-label" for="inlineRadio3">3</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio3" value="option3">
                    <label class="form-check-label" for="inlineRadio3">4</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio3" value="option3">
                    <label class="form-check-label" for="inlineRadio3">5</label>
                </div>
                <button type="submit" class="flat-butt flat-underline-butt TextColor-White mb-4 float-right ">Submit</button>
            </form>
        </div>
    </div>
</div>


<div>
    <a asp-action="Edit" asp-route-id="@Model.SpotID">Edit</a>
    <div>
        <a href="/Identity/Account/Manage">Back to List</a>
    </div>
</div>

@section scripts{
    <script src="~/js/spotMapUpdate.js"></script>
}
